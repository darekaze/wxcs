{% extends "layout.jinja" %}
{% block content %}
  <div class="row">
    <div class="col-lg-7 pb-3">
      <h2>Case: {{ case.title }}</h2>
      {# Put drill general info here #}
      <p>The current time is -- <span class="drill-clock"></span></p>
      <nav>
        <div class="nav nav-tabs mb-3" id="nav-tab" role="tablist">
          <a class="nav-item nav-link" id="nav-guide-tab" data-toggle="tab" href="#nav-guide" role="tab" aria-controls="nav-guide" aria-selected="false">Guidance</a>
          <a class="nav-item nav-link" id="nav-log-tab" data-toggle="tab" href="#nav-log" role="tab" aria-controls="nav-log" aria-selected="false">Appreciation Log</a>
          <a class="nav-item nav-link" id="nav-links-tab" data-toggle="tab" href="#nav-links" role="tab" aria-controls="nav-links" aria-selected="false">Links & Resources</a>
        </div>
      </nav>
      <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade" id="nav-guide" role="tabpanel" aria-labelledby="nav-guide-tab">
          <div class="custom-md">{{ guide.html|safe }}</div>
        </div>
        <div class="tab-pane fade" id="nav-log" role="tabpanel" aria-labelledby="nav-log-tab">
          <div class="custom-md">{{ log.html|safe }}</div>
        </div>
        <div class="tab-pane fade" id="nav-links" role="tabpanel" aria-labelledby="nav-links-tab">
          <div class="row equal-height">
          {# TODO: Refine this part #}
            {% for link in links %}
              <div class="col-6 col-sm-4 col-md-3 col-lg-4 col-xl-3 px-1">
                <a class="card text-center" href="{{ link.href }}" target="_blank" rel="noopener noreferrer">
                  <img class="card-img-top" src="{{ url_for('static', filename='assets/'+link.icon) }}" alt=""
                    onerror="this.src='{{ url_for('static', filename='assets/index.jpg') }}';" />
                  <div class="card-body p-2">
                    <h6 class="card-title mb-0">{{ link.name }}</h6>
                  </div>
                </a>
              </div>
            {% endfor %}
          </div>

        </div>
      </div>
    </div>
    <div class="col-lg-5 pb-5">
      <div class="row justify-content-end pr-3 pb-3">
        {# TODO: make route for activating syncing function #}
        <a href="#" class="btn btn-secondary mx-1">Sync Server Time</a>
        <a href="{{ url_for('core.ender') }}" class="btn btn-danger mx-1">Terminate</a>
      </div>
      {% include "sim/components/tips.jinja" %}
      {# Put other misc info here #}
    </div>
  </div>
{% endblock content %}

{% block js %}
  {{ moment.include_moment(local_js=url_for('static', filename='utils/moment/moment.min.js')) }}
  <script src="{{ url_for('static', filename='utils/moment/refresh.js') }}"></script>
  <script src="{{ url_for('static', filename='utils/tab_session.js') }}"></script>
{% endblock js %}
